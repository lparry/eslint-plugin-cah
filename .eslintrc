{
  "env": {
    "node": true
  },
  "rules": {

    // possible errors
    // @todo turn on
    "comma-dangle": [ 0, "always" ],
    "no-console": [ 1 ],

    // best practices
    "consistent-return": [ 2 ],
    "default-case": [ 2 ],
    "guard-for-in": [ 2 ],
    "no-else-return": [ 2 ],
    "no-eq-null": [ 2 ],
    "no-fallthrough": [ 2 ],
    "no-floating-decimal": [ 2 ],
    "no-self-compare": [ 2 ],
    "no-throw-literal": [ 2 ],
    "no-warning-comments": [ 1, { "terms": [ "todo", "fixme" ], "location": "start" } ],
    "radix": [ 1 ],
    "wrap-iife": [ 2 ],

    // strict mode
    "strict": [ 2, "global" ],

    // variables
    "no-catch-shadow": [ 2 ],
    "no-undefined": [ 2 ],
    "no-unused-vars": [ 2, {"args": "none"} ],

    // node environment
    "no-mixed-requires": [ 2 ],
    "no-new-require": [ 2 ],
    "no-path-concat": [ 2 ],
    "no-restricted-modules": [ 2 ],

    // style
    "indent": [ 2, 2, { "SwitchCase" : 1 } ],
    "brace-style": [ 2, "1tbs" ],
    "camelcase": [ 2 ],
    "comma-spacing": [ 2, { "before": false, "after": true } ],
    "consistent-this": [ 2, "self" ],
    "eol-last": [ 2 ],
    "key-spacing": [ 0, { "beforeColon": true, "afterColon": true } ], // @todo
    "max-nested-callbacks": [ 1, 3 ],
    "new-cap": 0, // @todo discuss ( immutable :( )
    "no-inline-comments": [ 0 ],
    "no-lonely-if": [ 2 ],
    "no-multiple-empty-lines": [ 2 ],
    "no-nested-ternary": [ 2 ],
    "no-underscore-dangle": [ 0 ],
    "quote-props": [ 2, "as-needed" ],
    "quotes": [ 2, "single", "avoid-escape" ],
    "semi": [ 2, "always" ],
    "space-after-keywords": [ 2, "always" ],
    "space-before-blocks": [ 2, "always" ],
    "space-before-function-paren": [ 2, "never" ],
    "space-in-brackets": [ 0 ],
    "space-infix-ops": [ 2 ],
    "space-return-throw-case": [ 2 ],
    "space-unary-ops": [ 0 ],
    "spaced-comment": [ 2 ],

    // legacy
    "max-depth": [ 2, 3 ],
    "max-len": [ 2, 100 ],
    "max-params": [ 2, 4 ],
    "max-statements": [ 1, 16 ],
    "no-bitwise": [ 2 ]
  }
}
